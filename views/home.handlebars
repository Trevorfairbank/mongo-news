<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>The Bored Panda Edition</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{!-- Insert Stuff here --}}
  {{#each data}}
  <div id="#articles" class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-header text-center">
        <h4>
          <a href={{link}}>{{title}}</a></h4>
        <div class="card-body text-center">
          <p>{{summary}}</p>
          <button class="btn btn-danger">Save Article</button>
        </div>
      </div>
    </div>
    <br>
  </div>
  {{/each}}

  {{#unless data}}
  <div class='alert alert-warning text-center'>
    <h4>Uh Oh. Looks like we don't have any new articles.</h4>
  </div>
  {{/unless}}
  <div class="card">
    <div class="card-header text-center">
      <h3>What Would You Like To Do?</h3>
    </div>
    <div class="card-body text-center">
      <h4>
        <a class="scrape-new">Try Scraping New Articles</a>
      </h4>
      <h4>
        <a href="/saved">Go to Saved Articles</a>
      </h4>
    </div>
  </div>
</div>